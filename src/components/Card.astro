---
import Image from "./Image.astro";
const {title, author, link, img,publishDate, description} = Astro.props;
let view = true;



---


    
<div id="card" class="" >
    <Image src={img}/>
    <div id="preview">
        <h1 class="card--title">{title}</h1>
        <p>{description}</p>
        <div class="little--info">
            <p>By: {author}</p>
            <p>Published on: {publishDate}</p>
            <a href={link} target="_blank" class="card--readMore"><p>Read More</p></a>
        </div>
    </div>
    </div>

    <script>
    
    </script>
    

    <style>

        
        body {
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
    }

    #card {
        width: 77%;
        border: 2px solid black;
        border-radius: 5px;
        margin-left: auto;
        margin-right: auto;
        height: 48vh;
        margin-bottom: 30px;
        margin-top: 30px;
        display: flex;
        overflow: hidden;
        backdrop-filter: blur(12px);
        border-radius: 1rem;
        border:#062f7d 0.2rem solid;
        transition: all 0.4s ease-in;
        box-shadow: 0.4rem 0.4rem 0.6rem #00000040;
            }

        #card:hover {
        transform: translateY(-1.5rem);
        border: #0856e7 0.2em solid;
        filter: drop-shadow(0px 0px 30px #0856e7);

        border-radius: 2.5rem 0 2.5rem 0;
        }
    

    #preview {
        flex: 1;
        padding: 20px;
        box-sizing: border-box;
        overflow: hidden;
        position: relative;
    }

    .card--title {
        margin-bottom: 10px;
        font-size: 30px;
    }

    .little--info {
        position: absolute;
        bottom: 20px;
        left: 0;
        right: 0;
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
    }
    .card--readMore{
        background: none;
        border: none;
        cursor: pointer;
        text-decoration: underline;
    }
    .card--readMore:hover{
        color: blanchedalmond;
    }

    button {
        
    }

    button:hover {
        color: gray;
    }
</style>

