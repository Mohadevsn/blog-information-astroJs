---
const {title, author, link, img,publishDate} = Astro.props;
---

<div class="card">
    <h1 class="card--title">{title}</h1>
    <p>Auteur: {author}</p>
    <img src={img} alt="image" class="card--image">
    <p>Publier le {publishDate}</p>
</div>


<style>
    .card{
        width: 80%;
        border: 2px solid black;
        border-radius: 5px;
        margin-left: 30px;
        margin-bottom: 20px;
        margin-top: 20px;
        margin-left: auto;
        margin-right: auto;


    }

    .card--image{
        width: 70%;
        height: auto;
        padding-left: auto;
        margin-right: auto;
    }
</style>