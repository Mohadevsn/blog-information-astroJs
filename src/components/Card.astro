---
const {title, author, link, img,publishDate, content} = Astro.props;
---


    
<div id="card" class="">
    <div class="card--image">
        <img src={img} alt="" class="image">
    </div>
    
    <div id="preview">
        <h1 class="card--title">{title}</h1>
        <p>By: {author}</p>
        <div class="little--info">
            <p>Published on: {publishDate}</p>
            <button><a href={link} target="_blank" class="read">Read More</a></button>
        </div>
    </div>
    </div>

    <style>

        
        body {
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
    }

    #card {
        width: 77%;
        border: 2px solid black;
        border-radius: 5px;
        margin-left: auto;
        margin-right: auto;
        height: 48vh;
        margin-bottom: 30px;
        margin-top: 30px;
        display: flex;
        overflow: hidden;
        backdrop-filter: blur(12px);
        
 border-radius: 1rem;
 border:#062f7d 0.2rem solid;
 transition: all 0.4s ease-in;
 box-shadow: 0.4rem 0.4rem 0.6rem #00000040;
    }

#card:hover {
 transform: translateY(-1.5rem);
 border: #0856e7 0.2em solid;
 filter: drop-shadow(0px 0px 30px #0856e7);

 border-radius: 2.5rem 0 2.5rem 0;
}
    .card--image {
        flex: 1;
        overflow: hidden;
        position: relative;
        text-align: center;
    }

    .card--image img {
        width: 90%;
    height: auto;
    object-fit: cover;
    border-radius: 50px;
    margin-top: 17px;
    }

    #preview {
        flex: 1;
        padding: 20px;
        box-sizing: border-box;
        overflow: hidden;
        position: relative;
    }

    .card--title {
        margin-bottom: 10px;
        
    }

    .little--info {
        position: absolute;
        bottom: 20px;
        left: 0;
        right: 0;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    button {
        background: none;
        border: none;
        cursor: pointer;
        text-decoration: underline;
        color: black;
    }

    button:hover {
        color: gray;
    }
</style>

