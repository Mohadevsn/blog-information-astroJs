<div class="cursorcontente" transition:persist >
    <div class="spinner">
      <div class="spinner1"></div>
  </div>
  </div>
<style>
  .cursorcontente{
    position: absolute;
    width: 23px;
    height:23px;
    border-radius: 30px;
    border-color: #f987e7; 
     border: 3px; 
      border-color: #cd3097;
      z-index: 0;
      border-style: solid; 
      overflow: hidden;
      opacity: 0.5;
    backdrop-filter: blur(2px);
    box-shadow: -1px 1px 8px 2px #f987e7;
    pointer-events: none;
}
.spinner {
    background-image: linear-gradient(rgb(186, 66, 255) 35%, rgb(0, 225, 255));
    width: 40px;
    /* transform: translateX(10px); */
    height: 40px;
    margin-top: -2px;
    margin-left: -2px;
    animation: spinning82341 1.7s linear infinite, hue 1s ease-in-out infinite;
    text-align: center;
    border-radius: 50px;
    filter: blur(32px);
    box-shadow: 0px -5px 20px 0px rgb(186, 66, 255), 0px 5px 20px 0px rgb(0, 225, 255);
}

.spinner1 {
  background-color: rgb(36, 36, 36);
  width: 10px;
  height: 10px;
  border-radius: 50px;
  filter: blur(10px);
}

@keyframes spinning82341 {
  to {
    transform: rotate(360deg);
  }
}

@keyframes hue {
  0% {
    filter: hue-rotate(0deg);
  }

  100% {
    filter: hue-rotate(360deg);
  }
}
</style>
